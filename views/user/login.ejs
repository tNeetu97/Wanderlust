<% layout('/layout/boilerplate.ejs') -%>
<body>
    <form method="post" action="/login" class="needs-validation mt-4" novalidate>
         <div class="row offset-4 mb-3"><h1>User Login</h1></div>
        <div class="row">
            <div class="username col-5">
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" placeholder="username" name="username" required>
        </div>
        <div class="password col-5">
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        </div>
         
        <div class="button">
            <button class="btn btn-success mt-4  ">logIn</button>
        </div>
    </form>
</body>